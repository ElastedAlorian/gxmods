  "developer": {
    "name": "ElastedAlorian"
  },
  "icons": {
    "512": "icon_512.png"
  },
  "manifest_version": 3,
  "mod": {
    "schema_version": 2,
    "something goes here": "i dont know what",
    "license": "license.txt",
    "payload": {
      "background_music": [
        {
          "author": "Thaddeus Silva",
